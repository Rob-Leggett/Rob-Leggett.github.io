{
  "name": "robertleggett-site",
  "version": "1.0.1",
  "type": "module",
  "private": true,
  "scripts": {
    "script:convert-wp": "node scripts/convert-wp.js",
    "script:generate-post-index": "node scripts/generate-post-index.js",
    "script:generate-rss": "node scripts/generate-rss.js",
    "script:generate-sitemap": "node scripts/generate-sitemap.js",
    "dev": "next dev --turbopack",
    "build": "npm run script:generate-rss && npm run script:generate-sitemap && npm run script:generate-post-index && next build",
    "start": "next start",
    "lint": "eslint .",
    "release": "semantic-release",
    "ping-search-engines": "npm run ping:bing && npm run ping:yandex",
    "ping:bing": "curl -s 'https://www.bing.com/ping?sitemap=https://robertleggett.com.au/sitemap.xml'",
    "ping:yandex": "curl -s 'https://api.indexnow.org/indexnow?url=https://robertleggett.com.au/&key=1234abcd5678ef901234abcd5678ef90'"
  },
  "dependencies": {
    "@icons-pack/react-simple-icons": "^13.8.0",
    "@mdx-js/mdx": "^3.1.1",
    "@next/mdx": "^16.1.6",
    "@radix-ui/react-slot": "^1.2.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "fast-xml-parser": "^5.3.0",
    "framer-motion": "^12.23.24",
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "lucide-react": "^0.546.0",
    "next": "^16.1.6",
    "next-mdx-remote": "^5.0.0",
    "next-themes": "^0.4.6",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-syntax-highlighter": "^16.1.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1",
    "sharp": "^0.34.4",
    "tailwind-merge": "^3.3.1",
    "tailwind-variants": "^3.1.1",
    "tailwindcss-animate": "^1.0.7",
    "turndown": "^7.2.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@tailwindcss/postcss": "^4.1.14",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^24.8.1",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@types/turndown": "^5.0.5",
    "eslint": "^9.37.0",
    "eslint-config-next": "^16.1.6",
    "semantic-release": "^25.0.2",
    "shadcn-ui": "^0.9.5",
    "tailwindcss": "^4.1.14",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.3"
  }
}
